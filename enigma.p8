--ui

function draw_ui()
	camera()
	palt(0,false)
	palt(12,true)
	spr(0,2,2)
	print_outline("X"..plr.key,10,2,7)
	spr(16,22,1)
	print_outline("X"..plr.chest,30,2,7)
	palt()
end

function print_outline(text,x,y)
	print(text,x-1,y,0)
	print(text,x+1,y,0)
	print(text,x,y-1,0)
	print(text,x,y+1,0)
	print(text,x,y,7)
end
